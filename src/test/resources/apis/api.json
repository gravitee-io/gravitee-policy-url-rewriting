{
    "id": "api-fail-response-template",
    "name": "my-api",
    "gravitee": "2.0.0",
    "proxy": {
        "context_path": "/test",
        "endpoints": [
            {
                "name": "default",
                "target": "http://localhost:8080/team",
                "http": {
                    "connectTimeout": 3000,
                    "readTimeout": 60000
                }
            }
        ]
    },
    "flows": [
        {
            "name": "flow-1",
            "methods": [],
            "enabled": true,
            "path-operator": {
                "path": "/",
                "operator": "STARTS_WITH"
            },
            "pre": [],
            "post": [
                {
                    "name": "URL Rewriting",
                    "description": "",
                    "enabled": true,
                    "policy": "url-rewriting",
                    "configuration": {
                        "rewriteResponseHeaders": true,
                        "rewriteResponseBody": true,
                        "fromRegex": "https?://[^/]*/((\\w*|/*))",
                        "toReplacement": "https://apis.gravitee.io/{#group[1]}"
                    }
                }
            ]
        }
    ],
    "resources": []
}
